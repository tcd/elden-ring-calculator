{
    "ts-node": {
        "files": true
    },
    "compilerOptions": {
        "module": "esne",
        "esModuleInterop": true,
        "downlevelIteration": true,
        "baseUrl": "./",
        "paths": {
            "@lib":   [ "./src/lib/index.ts"   ],
            "@types": [ "./src/types/index.ts" ],
        },
        "types": [
            "node",
            "mocha",
            "chai",
        ],
        "typeRoots": [
            "./node_modules/@types",
            "/src/@types",
        ],

    },
    "include": [
        "src/**/*.ts",
        "test/**/*.ts",
    ],
    "exclude": [
        "etc",
        "etc/ignore/**/*.ts",
        "etc/build/**/*.ts",
    ]
}
