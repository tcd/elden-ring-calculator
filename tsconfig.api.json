{
    "$schema": "http://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": true,
        "sourceMap": true,
        "declarationMap": true,
        "types": [],
        "lib": [
            "es5",
            "ES2017",
        ],
        "outDir": "build/tsc",
        "baseUrl": "./",
        "paths": {
            "@lib":   [ "./src/lib/index.ts"   ],
            "@types": [ "./src/types/index.ts" ],
        },
    },
    "include": [
        "src/**/*.ts"
    ]
}
