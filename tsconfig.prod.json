{
    "compilerOptions": {
        "target": "ES5",
        "module": "CommonJs",
        "esModuleInterop": true,
        "downlevelIteration": true,
        "declaration": true,
        "outDir": "dist",
        "rootDir": "src",
        "baseUrl": "./",
        "paths": {
            "@lib":   [ "./src/lib/index.ts"   ],
            "@types": [ "./src/types/index.ts" ],
        },
        "types": [
            "node",
        ],
        // "typeRoots": [
        //     "./node_modules/@types",
        //     "/src/@types",
        // ],
    },
    "include": [
        "./src/lib/",
    ],
    "exclude": [
        "test",
        "ignore",
        "dist",
    ]
}
