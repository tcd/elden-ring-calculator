{
    "name": "elden-ring-calculator",
    "version": "0.3.1",
    "author": "Clay Dunston <dunstontc@gmail.com>",
    "license": "MIT",
    "types": "./src/@types/elden-ring-calculator.d.ts",
    "files": [
        "dist/**/*.js",
        "dist/**/*.js.map",
        "dist/**/*.d.ts",
        "src/@types/elden-ring-calculator.d.ts"
    ],
    "main": "./dist/index.cjs.js",
    "typings": "./src/@types/elden-ring-calculator.d.ts",
    "scripts": {
        "git:push-tags": "git push origin --tags",
        "test": "npm run test:mocha",
        "test:coverage": "c8 --config ./etc/config/.nycrc.json npm run test:mocha && npm run test:report",
        "test:mocha": "mocha --require ts-node/register --require tsconfig-paths/register test/**/*.test.ts",
        "test:report": "c8 --config ./etc/config/.nycrc.json -r html report",
        "build:rollup": "rollup -c rollup.config.js",
        "build:types": "npm run build:types:clean && npm run build:types:compile && npm run build:types:rollup",
        "build:types:clean": "rimraf etc/build/*",
        "build:types:compile": "tsc --project tsconfig.api.json",
        "build:types:rollup": "rollup -c ./etc/config/rollup.config.dts.js",

        "build:types:bundle": "rollup -c ./rollup.config.bundle-typescript.ts"
    },
    "devDependencies": {
        "@istanbuljs/nyc-config-typescript": "^1.0.2",
        "@microsoft/api-extractor": "^7.25.2",
        "@rollup/plugin-alias": "^3.1.9",
        "@rollup/plugin-babel": "^5.3.1",
        "@rollup/plugin-commonjs": "^22.0.0",
        "@rollup/plugin-node-resolve": "^13.3.0",
        "@rollup/plugin-typescript": "^8.3.3",
        "@types/chai": "^4.3.1",
        "@types/deep-equal-in-any-order": "^1.0.1",
        "@types/mocha": "^9.1.1",
        "@types/node": "^17.0.42",
        "@typescript-eslint/eslint-plugin": "^5.27.1",
        "@typescript-eslint/parser": "^5.27.1",
        "@typescript-eslint/typescript-estree": "^5.29.0",
        "c8": "^7.11.3",
        "chai": "^4.3.6",
        "deep-equal-in-any-order": "^1.1.19",
        "mocha": "^10.0.0",
        "npm-dts": "^1.3.11",
        "nyc": "^15.1.0",
        "rimraf": "^3.0.2",
        "rollup": "^2.75.6",
        "rollup-plugin-dts": "^4.2.2",
        "rollup-plugin-terser": "^7.0.2",
        "ts-node": "^10.8.1",
        "tsconfig-paths": "^4.0.0",
        "tslib": "^2.4.0",
        "typescript": "^4.7.3"
    }
}
