{
    "name": "elden-ring-calculator",
    "version": "0.1.1",
    "author": "Clay Dunston <dunstontc@gmail.com>",
    "license": "MIT",
    "types": "./src/@types/elden-ring-calculator.d.ts",
    "files": [
        "dist/**/*.js",
        "dist/**/*.js.map",
        "dist/**/*.d.ts"
    ],
    "scripts": {
        "test": "npm run test:mocha",
        "test:coverage": "c8 npm run test:mocha && npm run test:report",
        "test:mocha": "mocha --require ts-node/register --require tsconfig-paths/register test/**/*.test.ts",
        "test:report": "c8 -r html report",
        "build:types": "npm-dts generate",
        "build:rollup": "rollup -c rollup.config.js",
        "publish": "npm publish"
    },
    "devDependencies": {
        "@istanbuljs/nyc-config-typescript": "^1.0.2",
        "@rollup/plugin-babel": "^5.3.1",
        "@rollup/plugin-commonjs": "^22.0.0",
        "@rollup/plugin-typescript": "^8.3.3",
        "@types/chai": "^4.3.1",
        "@types/deep-equal-in-any-order": "^1.0.1",
        "@types/mocha": "^9.1.1",
        "@types/node": "^17.0.42",
        "@typescript-eslint/eslint-plugin": "^5.27.1",
        "@typescript-eslint/parser": "^5.27.1",
        "c8": "^7.11.3",
        "chai": "^4.3.6",
        "deep-equal-in-any-order": "^1.1.19",
        "mocha": "^10.0.0",
        "npm-dts": "^1.3.11",
        "nyc": "^15.1.0",
        "rollup": "^2.75.6",
        "rollup-plugin-dts": "^4.2.2",
        "rollup-plugin-terser": "^7.0.2",
        "ts-node": "^10.8.1",
        "tsconfig-paths": "^4.0.0",
        "typescript": "^4.7.3"
    },
    "nyc": {
        "extends": "@istanbuljs/nyc-config-typescript",
        "check-coverage": false,
        "all": true,
        "extension": [
            ".ts"
        ],
        "include": [
            "src/**/*.ts"
        ],
        "reporter": [
            "html",
            "lcov",
            "text",
            "text-summary"
        ],
        "report-dir": "coverage"
    }
}
